<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LanGuide.MainPage"
             BackgroundColor="#029788">
    <StackLayout VerticalOptions="Center">
        <Image Source="logo.png" Aspect="AspectFit" HorizontalOptions="FillAndExpand" HeightRequest="150" Margin="0,0,0,30"/>
        <Entry x:Name="newUserEntry" Margin="50,0,50,10" TextColor="Black" Placeholder="Email" Keyboard="Email"/>
        <Entry x:Name="newPassEntry" Margin="50,0,50,10" TextColor="Black" Placeholder="Password" IsPassword="True"/>
        <Button x:Name="signupButton" Text="Sign Up" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" Clicked="signupButton_Clicked" Margin="0,0,0,30"/>
        <Entry x:Name="userEntry" Margin="50,0,50,10" TextColor="Black" Placeholder="Email" Keyboard="Email"/>
        <Entry x:Name="passEntry" Margin="50,0,50,10" TextColor="Black" Placeholder="Password" IsPassword="True"/>
        <Button x:Name="loginButton" Text="Log In" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" Clicked="loginButton_Clicked"/>
    </StackLayout>


</ContentPage>
